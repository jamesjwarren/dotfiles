[core]
    editor = vim
    filemode = false
    excludesfile = ~/.gitignore_global
    attributesfile = ~/.gitattributes
[alias]
    co = checkout
    br = branch
    cm = commit
    st = status
    ap = add -p
    amend = commit --amend
    unstage = reset HEAD --
    last = log -1 HEAD
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an %ae>%Creset' --abbrev-commit
    up = pull
[color]
    ui = auto
[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = red
[hub]
    protocol = https
[rebase]
    autoStash = true
[pull]
    rebase = true
[push]
    simple = true
[commit]
    gpgsign = true
[includeIf "gitdir:~/Projects/Personal/"]
    path = ~/.gitconfig_personal
[init]
	defaultBranch = main
